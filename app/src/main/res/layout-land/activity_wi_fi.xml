<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_wi_fi"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sense It All!"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:gravity="center"/>

    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar2"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_marginTop="?actionBarSize">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_below="@+id/toolbar">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                app:cardElevation="@dimen/app_bar_elevation"
                android:layout_weight="1"
                app:cardCornerRadius="5sp"
                android:layout_margin="10sp">

                <ImageView
                    android:id="@+id/imageView"
                    android:src="@drawable/wifi"
                    android:padding="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                app:cardElevation="@dimen/app_bar_elevation"
                android:layout_weight="1"
                app:cardCornerRadius="5sp"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_margin="10sp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5sp"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhiteShade"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="SAMPLE DATA"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_margin="10sp"
            app:cardCornerRadius="5sp"
            app:cardElevation="@dimen/app_bar_elevation">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="start"
                        android:padding="5sp"
                        android:text="STATE:"
                        android:textColor="@color/colorBlackShade"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ssid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="start"
                        android:padding="5sp"
                        android:text="SSID:"
                        android:textColor="@color/colorBlackShade"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/frequency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="start"
                        android:padding="5sp"
                        android:text="FREQUENCY"
                        android:textColor="@color/colorBlackShade"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/ip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="start"
                        android:padding="5sp"
                        android:text="IP ADDRESS:"
                        android:textColor="@color/colorBlackShade"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="start"
                        android:padding="5sp"
                        android:text="LINK SPEED:"
                        android:textColor="@color/colorBlackShade"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="start"
                        android:padding="5sp"
                        android:text="MAC ADDRESS:"
                        android:textColor="@color/colorBlackShade"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/bssid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="start"
                        android:padding="5sp"
                        android:text="BSSID:"
                        android:textColor="@color/colorBlackShade"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/networkid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="start"
                        android:padding="5sp"
                        android:text="NETWORK ID:"
                        android:textColor="@color/colorBlackShade"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/hidden"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="start"
                        android:padding="5sp"
                        android:text="SSID HIDDEN:"
                        android:textColor="@color/colorBlackShade"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/rssi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="start"
                        android:padding="5sp"
                        android:text="RSSI:"
                        android:textColor="@color/colorBlackShade"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="NETWORKS"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </ScrollView>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>
