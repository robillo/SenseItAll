<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorIntensity8"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.dashboard_activity.dashboard_fragment.DashboardFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorTextFive"
        tools:ignore="ContentDescription,SmallSp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textColor="@color/colorMajorDarkMuchLighter"
            android:text="@string/app_name_simple"/>

        <!--fontPath="fonts/one.ttf"-->
        <!--tools:ignore="MissingPrefix"-->

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        app:cardCornerRadius="20sp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0sp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="6sp"
            android:layout_marginTop="6sp"
            android:textSize="16sp"
            android:textColor="@color/colorMajorDarkMuchLighter"
            android:text="CHOOSE CATEGORY"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>