<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinator"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".view.tool_activity.image_tools.draw.DrawFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <com.divyanshu.draw.widget.DrawView
            android:id="@+id/draw_view"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorTextFive"
            tools:ignore="ContentDescription,SmallSp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/small_two">

                <android.support.v7.widget.CardView
                    android:layout_width="5sp"
                    android:layout_height="5sp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/colorBlackShade"
                    tools:ignore="SmallSp"
                    app:cardCornerRadius="4sp">

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <ImageView
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/colorTextFive"
                tools:ignore="ContentDescription" />

            <FrameLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/small_one">

                <android.support.v7.widget.CardView
                    android:layout_width="7sp"
                    android:layout_height="7sp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/colorBlackShade"
                    tools:ignore="SmallSp"
                    app:cardCornerRadius="4sp">

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <ImageView
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/colorTextFive"
                tools:ignore="ContentDescription" />

            <FrameLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/mid_size">

                <android.support.v7.widget.CardView
                    android:layout_width="9sp"
                    android:layout_height="9sp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/colorBlackShade"
                    tools:ignore="SmallSp"
                    app:cardCornerRadius="5sp">

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <ImageView
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/colorTextFive"
                tools:ignore="ContentDescription" />

            <FrameLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/large_one">

                <android.support.v7.widget.CardView
                    android:layout_width="11sp"
                    android:layout_height="11sp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/colorBlackShade"
                    tools:ignore="SmallSp"
                    app:cardCornerRadius="6sp">

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <ImageView
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/colorTextFive"
                tools:ignore="ContentDescription" />

            <FrameLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/large_two">

                <android.support.v7.widget.CardView
                    android:layout_width="13sp"
                    android:layout_height="13sp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/colorBlackShade"
                    tools:ignore="SmallSp"
                    app:cardCornerRadius="7sp">

                </android.support.v7.widget.CardView>

            </FrameLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorTextFive"
            tools:ignore="ContentDescription,SmallSp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:id="@+id/black"
                tools:ignore="ContentDescription"
                android:layout_margin="5sp"/>

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/red"
                android:id="@+id/red"
                tools:ignore="ContentDescription"
                android:layout_margin="5sp"/>

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:id="@+id/yellow"
                tools:ignore="ContentDescription"
                android:layout_margin="5sp"/>

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/green"
                android:id="@+id/green"
                tools:ignore="ContentDescription"
                android:layout_margin="5sp"/>

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blue"
                android:id="@+id/blue"
                tools:ignore="ContentDescription"
                android:layout_margin="5sp" />

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/pink"
                android:id="@+id/pink"
                tools:ignore="ContentDescription"
                android:layout_margin="5sp"/>

            <ImageView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/brown"
                android:id="@+id/brown"
                tools:ignore="ContentDescription"
                android:layout_margin="5sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorTextFive"
            tools:ignore="ContentDescription,SmallSp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="CLEAR"
                android:id="@+id/clear_canvas"
                android:textColor="@color/red_shade_four"
                android:textSize="15sp"
                android:padding="5sp"
                android:gravity="center"/>

            <ImageView
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/colorTextFive"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="UNDO"
                android:id="@+id/undo"
                android:textColor="@color/red_shade_four"
                android:textSize="15sp"
                android:padding="5sp"
                android:gravity="center"/>

            <ImageView
                android:layout_width="1sp"
                android:layout_height="match_parent"
                android:background="@color/colorTextFive"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="REDO"
                android:id="@+id/redo"
                android:textColor="@color/red_shade_four"
                android:textSize="15sp"
                android:padding="5sp"
                android:gravity="center"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/colorTextFive"
            tools:ignore="ContentDescription,SmallSp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:text="SAVE TO GALLERY"
            android:id="@+id/save_to_gallery"
            android:textColor="@color/white"
            android:background="@color/red_shade_four"
            android:padding="10sp"
            android:gravity="center"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>