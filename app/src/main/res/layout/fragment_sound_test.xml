<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.test_activity.tests.speaker_volume_test_fragment.SoundTestFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1">

        <com.sdsmdg.harjot.crollerTest.Croller
            android:id="@+id/croller"
            android:layout_width="300sp"
            android:layout_height="300sp"
            android:layout_gravity="center"
            app:back_circle_color="#EDEDED"
            app:indicator_color="@color/colorMajorDark"
            app:indicator_width="15"
            app:is_continuous="false"
            app:label_color="@color/colorMajorDark"
            app:label="Scroll Inside Circle To Alter Volume"
            app:main_circle_color="#FFFFFF"
            app:max="100"
            app:progress="50"
            app:progress_primary_color="@color/colorMajorDark"
            app:progress_secondary_color="#EEEEEE"
            app:start_offset="45" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_shade_three"
        android:id="@+id/play_pause"
        android:text="@string/play"
        android:textSize="20sp"
        android:padding="12sp"
        android:textColor="@color/white"
        android:gravity="center"/>

</LinearLayout>