<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.test_activity.directions.directions_fragment.DirectionsFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/colorTextFive"
        tools:ignore="ContentDescription,SmallSp" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorMajorDark"
        app:cardCornerRadius="15sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"
        app:cardElevation="0sp"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/directions"
            android:textColor="@color/white"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:id="@+id/data_type"
            tools:ignore="MissingPrefix,RtlHardcoded,RtlSymmetry"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorMajorDark"
        tools:text="@string/proximity_direction"
        android:padding="13sp"
        android:id="@+id/test_direction"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp">

        <ImageView
            android:layout_width="5sp"
            android:layout_height="match_parent"
            android:background="@color/green_shade_three"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/green_shade_three"
            tools:text="@string/proximity_hint"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:id="@+id/test_hint"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/start_test"
        android:text="@string/start_test"
        android:padding="12sp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@color/red_shade_three"
        android:layout_gravity="center"
        tools:ignore="MissingPrefix,RtlHardcoded,RtlSymmetry"/>

</LinearLayout>