<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15sp"
    app:cardElevation="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBlackShade"
            tools:text="SAR RADIATION"
            android:id="@+id/heading"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:background="@color/colorTextFour"
            tools:ignore="ContentDescription,SmallSp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:padding="70sp"
            android:id="@+id/more_drawable"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3sp"
            android:background="@color/colorTextFour"
            tools:ignore="ContentDescription,SmallSp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textSize="16sp"
            android:textColor="@color/colorTextTwo"
            tools:text="SAR radiation is a very very very very very deadly thing i am sitting in front of.SAR radiation is a very very very very very deadly thing i am sitting in front of."
            android:id="@+id/content"/>

    </LinearLayout>

</android.support.v7.widget.CardView>