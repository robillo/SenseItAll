<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@+id/activity_camera"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMajor"
                android:gravity="center"
                android:text="Sense It All!"
                android:textColor="#FFF"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textStyle="normal|bold" />

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorMajor"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/card"
                android:text="@string/magnetic_field_sensor"
                android:textColor="@color/colorWhiteShade"
                android:background="@color/colorMajorDark"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp">

            </TextView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_margin="5sp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="@dimen/app_bar_elevation"
                app:cardCornerRadius="5sp"
                android:layout_margin="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chart1"
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="3"
                        android:background="@android:color/white"/>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="2">

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:padding="10sp">

                            <TextView
                                android:layout_column="0"
                                android:layout_row="0"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:text="Magnetic Field (X):"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/magneticX"
                                android:layout_column="1"
                                android:layout_row="0"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_column="0"
                                android:layout_row="1"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:text="Magnetic Field (Y):"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/magneticY"
                                android:layout_column="1"
                                android:layout_row="1"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_column="0"
                                android:layout_row="2"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:text="Magnetic Field (Z):"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/magneticZ"
                                android:layout_column="1"
                                android:layout_row="2"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_column="0"
                                android:layout_row="3"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:text="Vendor:"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/vendorMag"
                                android:layout_column="1"
                                android:layout_row="3"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_column="0"
                                android:layout_row="4"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:text="Resolution:"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/resolutionMag"
                                android:layout_column="1"
                                android:layout_row="4"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_column="0"
                                android:layout_row="5"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:text="Maximum Range:"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/maximumRange"
                                android:layout_column="1"
                                android:layout_row="5"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_column="0"
                                android:layout_row="6"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:text="Power:"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/maxcl"
                                android:layout_column="1"
                                android:layout_row="6"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_column="0"
                                android:layout_row="7"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:text="Present:"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/present"
                                android:layout_column="1"
                                android:layout_row="7"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_column="0"
                                android:layout_row="8"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:text="Calibrator:"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/calib"
                                android:layout_column="1"
                                android:layout_row="8"
                                android:fontFamily="sans-serif-smallcaps"
                                android:padding="5sp"
                                android:textColor="@color/colorMajorDark"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </GridLayout>

                    </ScrollView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>