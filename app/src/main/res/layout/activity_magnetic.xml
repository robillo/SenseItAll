<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sense It All!"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar2"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_marginTop="?actionBarSize">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll"
        android:layout_below="@+id/toolbar">

        <android.support.v7.widget.CardView
            android:layout_width="0sp"
            android:layout_height="150sp"
            android:layout_weight="1"
            android:layout_margin="10sp"
            app:cardCornerRadius="10sp"
            app:cardElevation="@dimen/app_bar_elevation">

            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/mag"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5sp"
            android:layout_margin="10sp"
            app:cardCornerRadius="10sp"
            app:cardBackgroundColor="@color/colorPrimaryLight"
            app:cardElevation="@dimen/app_bar_elevation">

            <TextView
                android:id="@+id/tvMG"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/app_bar_elevation"
                android:textSize="15sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:padding="6sp"
                android:gravity="center"
                android:textColor="@color/colorBlackShade"
                android:text="MAGNETIC FIELD SENSOR"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/app_bar_elevation"
        app:cardCornerRadius="5sp"
        android:layout_margin="10sp"
        android:layout_below="@+id/ll">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:padding="10sp">

                    <TextView
                        android:layout_column="0"
                        android:layout_row="0"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:text="Magnetic Field (X):"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/magneticX"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="0"
                        android:layout_row="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:text="Magnetic Field (Y):"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/magneticY"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_column="0"
                        android:layout_row="2"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:text="Magnetic Field (Z):"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/magneticZ"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_column="0"
                        android:layout_row="3"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:text="Vendor:"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vendorMag"
                        android:layout_column="1"
                        android:layout_row="3"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="0"
                        android:layout_row="4"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:text="Resolution:"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/resolutionMag"
                        android:layout_column="1"
                        android:layout_row="4"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="0"
                        android:layout_row="5"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:text="Maximum Range:"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/maximumRange"
                        android:layout_column="1"
                        android:layout_row="5"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="0"
                        android:layout_row="6"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:text="Power:"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/maxcl"
                        android:layout_column="1"
                        android:layout_row="6"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="0"
                        android:layout_row="7"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:text="Present:"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/present"
                        android:layout_column="1"
                        android:layout_row="7"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_column="0"
                        android:layout_row="8"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:text="Calibrator:"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/calib"
                        android:layout_column="1"
                        android:layout_row="8"
                        android:fontFamily="sans-serif-smallcaps"
                        android:padding="5sp"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </GridLayout>

            </LinearLayout>

        </ScrollView>



    </android.support.v7.widget.CardView>

</RelativeLayout>
