<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ui.detail_activity.information.storage.StorageFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:id="@+id/scroll_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3sp"
                android:background="@color/color_fragment_top_line"
                tools:ignore="ContentDescription,SmallSp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:id="@+id/card_internal_storage">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/internal_storage_used"
                        android:textSize="18sp"
                        android:textColor="@color/colorTextOne"
                        android:padding="10sp"
                        android:id="@+id/internal_storage_used"/>

                    <ProgressBar
                        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        tools:progress="2"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:progressDrawable="@drawable/progressbar_states"
                        android:layout_gravity="top"
                        android:id="@+id/internal_storage_progress"
                        android:max="100"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:id="@+id/card_external_storage">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/external_storage_used"
                        android:textSize="18sp"
                        android:textColor="@color/colorTextOne"
                        android:padding="10sp"
                        android:id="@+id/external_storage_used"/>

                    <ProgressBar
                        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        tools:progress="2"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:layout_marginBottom="10sp"
                        android:progressDrawable="@drawable/progressbar_states"
                        android:layout_gravity="top"
                        android:id="@+id/external_storage_progress"
                        android:max="100"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <include layout="@layout/layout_about_sensor" />

            <include layout="@layout/layout_basic_information" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/colorTextFive"
                tools:ignore="ContentDescription,SmallSp"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/layout_go_back_or_to_test"/>

</LinearLayout>