<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sense It All!"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar2"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_marginTop="?actionBarSize">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll"
        android:layout_below="@+id/toolbar">

        <android.support.v7.widget.CardView
            android:layout_width="0sp"
            android:layout_height="150sp"
            android:layout_weight="1"
            android:layout_margin="10sp"
            app:cardCornerRadius="10sp"
            app:cardElevation="@dimen/app_bar_elevation">

            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/cpu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5sp"
            android:layout_margin="10sp"
            app:cardCornerRadius="10sp"
            app:cardBackgroundColor="@color/colorPrimaryLight"
            app:cardElevation="@dimen/app_bar_elevation">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/app_bar_elevation"
                android:textSize="15sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:padding="6sp"
                android:gravity="center"
                android:textColor="@color/colorBlackShade"
                android:text="SAMPLE DATA"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/app_bar_elevation"
        app:cardCornerRadius="10sp"
        android:layout_margin="10sp"
        android:padding="5sp"
        android:layout_below="@+id/ll"
        app:cardBackgroundColor="@color/colorPrimaryLightLight">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5sp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3">

                    <TextView
                        android:text="Processor Info:"
                        android:gravity="center"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_gravity="center"
                        android:padding="3sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"/>

                    <TextView
                        android:text="Processor:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/processor"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="1"/>

                    <TextView
                        android:text="Number of Cores:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="2"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/cores"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="2"/>

                    <TextView
                        android:text="Maximum Frequency:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/max_frequency"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="3"/>

                    <TextView
                        android:text="Minimum Frequency:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="4"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/min_frequency"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="4"/>

                    <TextView
                        android:text="Current Frequency:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="5"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/current_frequency"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="5"/>

                    <TextView
                        android:text="CPU Architecture:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="6"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/cpu_architecture"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="6"/>

                    <TextView
                        android:text="BogoMIPS:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="7"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/bogomips"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="7"/>

                    <TextView
                        android:text="Features:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="8"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/features"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="8"/>

                    <TextView
                        android:text="CPU Implementer:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="9"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/cpu_implementer"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="9"/>

                    <TextView
                        android:text="CPU Variant:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="10"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/cpu_variant"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="10"/>

                    <TextView
                        android:text="CPU Part:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="11"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/cpu_part"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="11"/>

                    <TextView
                        android:text="CPU Revision:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="12"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/cpu_revision"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="12"/>

                    <TextView
                        android:text="Hardware:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="13"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/hardware"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="13"/>

                    <TextView
                        android:text="Revision:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="14"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/revision"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="14"/>

                    <TextView
                        android:text="Serial:"
                        android:fontFamily="sans-serif-smallcaps"
                        android:layout_column="0"
                        android:layout_row="15"
                        android:padding="3sp"
                        android:layout_columnWeight="1"/>

                    <TextView
                        android:id="@+id/serial"
                        android:textColor="#000"
                        android:text="___"
                        android:padding="3sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:layout_columnWeight="1"
                        android:layout_column="1"
                        android:layout_row="15"/>

                </GridLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Memory"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"/>

                <com.github.yongjhih.mismeter.MisMeter
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:id="@+id/memory"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Size:"
                    android:id="@+id/memory_size"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Used:"
                    android:id="@+id/memory_used"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Free:"
                    android:id="@+id/memory_free"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Internal Storage"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"/>

                <com.github.yongjhih.mismeter.MisMeter
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:id="@+id/internal_storage"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Size:"
                    android:id="@+id/internal_storage_size"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Used:"
                    android:id="@+id/internal_storage_used"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Free:"
                    android:id="@+id/internal_storage_free"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="External Storage"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"/>

                <com.github.yongjhih.mismeter.MisMeter
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:id="@+id/external_storage"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Size:"
                    android:id="@+id/external_storage_size"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Used:"
                    android:id="@+id/external_storage_used"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Free:"
                    android:id="@+id/external_storage_free"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Storage Media:"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total Size:"
                    android:id="@+id/storage_size"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Partition Size 1:"
                    android:id="@+id/partition_size1"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Partition Size 2:"
                    android:id="@+id/partition_size2"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Partition Size 3:"
                    android:id="@+id/partition_size3"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Partition Size 4:"
                    android:id="@+id/partition_size4"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Partition Size 5:"
                    android:id="@+id/partition_size5"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="3sp"/>

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>
