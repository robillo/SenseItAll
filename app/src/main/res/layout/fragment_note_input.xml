<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorTextFive"
    tools:context=".view.tool_activity.everyday_tools.take_note.note_input.NoteInputFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:paddingBottom="5sp"
            android:text="HEADING:"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/colorMajorDarkMuchLighter"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            tools:ignore="NestedWeights"
            android:layout_margin="10sp"
            app:cardElevation="5sp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:inputType="text"
                android:hint="TYPE HEADING HERE"
                android:textColorHint="@color/colorTextFour"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:maxLength="50"
                android:id="@+id/heading_text"
                tools:ignore="HardcodedText,UnusedAttribute"
                android:backgroundTint="@color/colorTextFour"
                android:importantForAutofill="no"
                android:textColor="@color/colorTextTwo"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20sp"
            android:paddingTop="10sp"
            android:paddingBottom="5sp"
            android:text="DESCRIPTION:"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/colorMajorDarkMuchLighter"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="4"
            tools:ignore="NestedWeights"
            android:layout_margin="10sp"
            app:cardElevation="5sp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minLines="10"
                android:lines="20"
                android:textSize="16sp"
                android:inputType="textMultiLine"
                android:hint="TYPE DESCRIPTION HERE"
                android:textColorHint="@color/colorTextFour"
                android:gravity="center_horizontal"
                android:id="@+id/description_text"
                tools:ignore="HardcodedText,UnusedAttribute"
                android:backgroundTint="@color/colorTextFour"
                android:importantForAutofill="no"
                android:textColor="@color/colorTextTwo"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/red_shade_four"
        android:layout_margin="10sp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50sp"
            android:paddingRight="50sp"
            android:paddingTop="8sp"
            android:paddingBottom="8sp"
            android:text="@string/add_note"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/add_note"/>

    </android.support.v7.widget.CardView>

</LinearLayout>