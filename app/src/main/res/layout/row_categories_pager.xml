<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5sp"
    tools:ignore="RtlHardcoded"
    android:id="@+id/card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:paddingRight="20sp"
        android:orientation="horizontal"
        android:background="@drawable/card_dashboard_bg"
        android:id="@+id/parent_card">

        <FrameLayout
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="5sp"
            android:padding="5sp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="32sp"
                app:cardElevation="0sp"
                app:cardBackgroundColor="@color/white">

            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_verified_user_black_48"
                android:padding="15sp"
                android:tint="@color/colorMajorDarkMuchLighter"
                tools:ignore="ContentDescription"
                android:id="@+id/image"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="3sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="5sp"
                android:textColor="@color/white"
                android:textSize="22sp"
                tools:text="Electronic Sensors"
                android:id="@+id/name"
                tools:ignore="RtlHardcoded"/>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0sp"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"
                app:cardCornerRadius="13sp"
                app:cardBackgroundColor="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorMajorDarkMuchLighter"
                    android:textSize="12sp"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:paddingBottom="5sp"
                    android:paddingTop="5sp"
                    tools:text="26 Items"
                    android:id="@+id/count_description"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>