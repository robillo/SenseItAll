                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="3sp"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/device_id"
                    android:textColor="#000"
                    android:text="India"
                    android:padding="3sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="1"/>

                <TextView
                    android:text="Software Version:"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="3sp"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/software_version"
                    android:textColor="#000"
                    android:text="India"
                    android:padding="3sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="1"/>

                <TextView
                    android:text="Data Activity:"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="3sp"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/data_activity"
                    android:textColor="#000"
                    android:text="India"
                    android:padding="3sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="1"/>

                <TextView
                    android:text="Data State:"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="3sp"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/data_state"
                    android:textColor="#000"
                    android:text="India"
                    android:padding="3sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="1"/>

                <TextView
                    android:text="Network Type:"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="3sp"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/network_type"
                    android:textColor="#000"
                    android:text="India"
                    android:padding="3sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="1"/>

            </GridLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>
