<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sense It All!"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar2"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_marginTop="?actionBarSize">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll"
        android:layout_below="@+id/toolbar">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0sp"
            android:layout_height="150sp"
            android:elevation="@dimen/app_bar_elevation"
            android:layout_weight="1"
            android:background="@color/colorPrimaryLight"
            android:layout_margin="10sp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:elevation="@dimen/app_bar_elevation"
            android:layout_weight="1"
            android:padding="5sp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorBlackShade"
            android:layout_margin="10sp"
            android:background="@color/colorPrimaryLight"
            android:text="SAMPLE DATA"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/app_bar_elevation"
        app:cardCornerRadius="5sp"
        android:layout_margin="10sp"
        android:layout_below="@+id/ll">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3">

                <TextView
                    android:text="Sim Operator Name:"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:padding="3sp"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/operator_name"
                    android:textColor="#000"
                    android:text="Airtel"
                    android:padding="3sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="0"/>

                <TextView
                    android:text="Sim Country:"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="3sp"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/country"
                    android:textColor="#000"
                    android:text="India"
                    android:padding="3sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="1"/>

                <TextView
                    android:text="Sim Operator:"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="3sp"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/operator"
                    android:textColor="#000"
                    android:text="India"
                    android:padding="3sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="1"/>

                <TextView
                    android:text="Sim S.N.:"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="3sp"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/sn"
                    android:textColor="#000"
                    android:text="India"
                    android:padding="3sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="1"/>

                <TextView
                    android:text="Sim State:"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="3sp"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/state"
                    android:textColor="#000"
                    android:text="India"
                    android:padding="3sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="1"/>

                <TextView
                    android:text="Subscriber id:"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="3sp"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/subscriber_id"
                    android:textColor="#000"
                    android:text="India"
                    android:padding="3sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="1"/>

                <TextView
                    android:text="Mail Alpha Tag:"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="3sp"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/mail_alpha_tag"
                    android:textColor="#000"
                    android:text="India"
                    android:padding="3sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="1"/>

                <TextView
                    android:text="Mail Number:"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="3sp"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/mail_number"
                    android:textColor="#000"
                    android:text="India"
                    android:padding="3sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:layout_columnWeight="1"
                    android:layout_column="1"
                    android:layout_row="1"/>

                <TextView
                    android:text="ICC Card:"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:padding="3sp"
                    android:layout_columnWeight="1"/>

                <TextView
                    android:id="@+id/icc_card"
                    android:textColor="#000"
                    android:text="India"
                    android:padding="3sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:layout_columnWeight="1"
