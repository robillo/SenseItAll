<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sense It All!"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar2"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_marginTop="?actionBarSize">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll"
        android:layout_below="@+id/toolbar">

        <android.support.v7.widget.CardView
            android:layout_width="0sp"
            android:layout_height="150sp"
            android:layout_weight="1"
            android:layout_margin="10sp"
            app:cardCornerRadius="10sp"
            app:cardElevation="@dimen/app_bar_elevation">

            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/proximity"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5sp"
            android:layout_margin="10sp"
            app:cardCornerRadius="10sp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardElevation="@dimen/app_bar_elevation">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/app_bar_elevation"
                android:textSize="20sp"
                android:textColor="@color/colorWhiteShade"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:padding="6sp"
                android:gravity="center"
                android:text="SAMPLE DATA"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="@dimen/app_bar_elevation"
        app:cardCornerRadius="5sp"
        android:layout_margin="10sp"
        android:layout_below="@+id/ll"
        app:cardBackgroundColor="@color/colorPrimaryDark">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <com.github.yongjhih.mismeter.MisMeter
                    android:id="@+id/meter"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_row="0"
                        android:layout_column="0"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Name:"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="0"
                        android:layout_column="1"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:id="@+id/name"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="1"
                        android:layout_column="0"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Vendor:"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="1"
                        android:layout_column="1"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:id="@+id/vendor"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="2"
                        android:layout_column="0"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Wake Up Sensor:"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="2"
                        android:layout_column="1"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:id="@+id/wake_up"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="3"
                        android:layout_column="0"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Minimum Delay:"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="3"
                        android:layout_column="1"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:id="@+id/minimum_delay"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="4"
                        android:layout_column="0"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Version:"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="4"
                        android:layout_column="1"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:id="@+id/version"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="5"
                        android:layout_column="0"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Power:"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="5"
                        android:layout_column="1"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:id="@+id/power"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="6"
                        android:layout_column="0"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Maximum Range:"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="6"
                        android:layout_column="1"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:id="@+id/maximum_range"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="7"
                        android:layout_column="0"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Resolution:"
                        android:padding="5sp"/>

                    <TextView
                        android:layout_row="7"
                        android:layout_column="1"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:id="@+id/resolution"
                        android:padding="5sp"/>

                </GridLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>
