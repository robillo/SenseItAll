<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@+id/activity_camera"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMajor"
                android:gravity="center"
                android:text="@string/sense_it_all"
                android:textColor="#FFF"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textStyle="normal|bold" />

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorMajor"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/card"
                android:text="@string/proximity_sensor_test"
                android:textColor="@color/colorWhiteShade"
                android:background="@color/colorMajorDark"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp">

            </TextView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_margin="5sp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardElevation="@dimen/app_bar_elevation"
                app:cardCornerRadius="5sp"
                android:layout_margin="10sp"
                android:layout_below="@+id/ll"
                app:cardBackgroundColor="@color/colorMajorDark">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.github.yongjhih.mismeter.MisMeter
                            android:id="@+id/meter"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            />

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10sp"
                            android:layout_marginTop="10sp">

                            <TextView
                                android:layout_row="0"
                                android:layout_column="0"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Name:"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="0"
                                android:layout_column="1"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:id="@+id/name"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="1"
                                android:layout_column="0"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Vendor:"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="1"
                                android:layout_column="1"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:id="@+id/vendor"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="2"
                                android:layout_column="0"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Wake Up Sensor:"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="2"
                                android:layout_column="1"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:id="@+id/wake_up"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="3"
                                android:layout_column="0"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Minimum Delay:"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="3"
                                android:layout_column="1"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:id="@+id/minimum_delay"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="4"
                                android:layout_column="0"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Version:"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="4"
                                android:layout_column="1"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:id="@+id/version"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="5"
                                android:layout_column="0"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Power:"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="5"
                                android:layout_column="1"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:id="@+id/power"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="6"
                                android:layout_column="0"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Maximum Range:"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="6"
                                android:layout_column="1"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:id="@+id/maximum_range"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="7"
                                android:layout_column="0"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:text="Resolution:"
                                android:padding="5sp"/>

                            <TextView
                                android:layout_row="7"
                                android:layout_column="1"
                                android:textColor="#FFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-smallcaps"
                                android:id="@+id/resolution"
                                android:padding="5sp"/>

                        </GridLayout>

                    </LinearLayout>

                </ScrollView>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>