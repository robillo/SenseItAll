<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.tool_activity.everyday_tools.take_note.NoteFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ir.beigirad.zigzagview.ZigzagView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:zigzagBackgroundColor="@color/colorTextOne"
            app:zigzagElevation="8dp"
            app:zigzagHeight="10dp"
            app:zigzagShadowAlpha="0.9"
            app:zigzagSides="bottom"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="YOUR NOTES"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"/>

        </ir.beigirad.zigzagview.ZigzagView>

        <ir.beigirad.zigzagview.ZigzagView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:zigzagBackgroundColor="@color/white"
            app:zigzagElevation="8dp"
            app:zigzagHeight="10dp"
            app:zigzagShadowAlpha="0.9"
            app:zigzagSides="top|bottom"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            tools:context=".view.tool_activity.everyday_tools.take_note.NoteFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:text="BANGALORE LEARNINGS"
                    android:textColor="@color/primary_new_light"
                    android:textSize="18sp"
                    android:gravity="center"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/colorTextFive"
                    tools:ignore="ContentDescription,SmallSp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorTextTwo"
                        android:paddingLeft="20sp"
                        android:paddingTop="15sp"
                        android:paddingBottom="5sp"
                        android:text="2 October, 2018"
                        android:textSize="15sp"
                        android:gravity="start"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextTwo"
                        android:paddingRight="20sp"
                        android:paddingTop="15sp"
                        android:paddingBottom="5sp"
                        android:text="05:06 PM"
                        android:textSize="15sp"
                        tools:ignore="RtlHardcoded,RtlSymmetry" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextOne"
                    android:padding="20sp"
                    android:text="@string/about_proximity"
                    android:textSize="15sp"
                    android:maxLines="8" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/colorTextFive"
                    tools:ignore="ContentDescription,SmallSp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/baseline_delete_black_48"
                        android:tint="@color/red_shade_four"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="10sp"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="@color/colorTextFive"
                        tools:ignore="ContentDescription,SmallSp" />

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:src="@drawable/baseline_edit_black_48"
                        android:tint="@color/primary_new_two_dark"
                        android:background="?android:attr/selectableItemBackground"
                        android:padding="10sp"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

            </LinearLayout>

        </ir.beigirad.zigzagview.ZigzagView>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_shade_four"
        android:textSize="20sp"
        android:padding="15sp"
        android:textColor="@color/white"
        android:text="NEW NOTE"
        android:gravity="center"/>

</LinearLayout>