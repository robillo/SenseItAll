<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.tab_dashboard_activity.sections.sensors_fragment.SensorsFragment">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:id="@+id/featured_recycler_view"
        tools:listitem="@layout/row_featured_item"
        tools:itemCount="5">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_list_recycler_view"
        tools:listitem="@layout/row_simple_item">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>