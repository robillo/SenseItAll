<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sense It All!"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar2"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary"
        android:layout_marginTop="?android:actionBarSize">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll"
        android:layout_below="@+id/toolbar">

        <android.support.v7.widget.CardView
            android:layout_width="0sp"
            android:layout_height="150sp"
            android:layout_weight="1"
            android:layout_margin="10sp"
            app:cardCornerRadius="10sp"
            app:cardElevation="@dimen/app_bar_elevation">

            <ImageView
                android:id="@+id/imageView"
                android:src="@drawable/screen"
                android:padding="10sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5sp"
            android:layout_margin="10sp"
            app:cardCornerRadius="10sp"
            app:cardBackgroundColor="@color/colorPrimaryLight"
            app:cardElevation="@dimen/app_bar_elevation">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="@dimen/app_bar_elevation"
                android:textSize="15sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:padding="6sp"
                android:gravity="center"
                android:textColor="@color/colorBlackShade"
                android:text="SAMPLE DATA"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/app_bar_elevation"
        app:cardCornerRadius="5sp"
        android:layout_margin="10sp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_below="@+id/ll">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhiteShade"
                    android:textSize="15sp"
                    android:text="Has Touch? :"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"
                    android:textStyle="bold"
                    android:id="@+id/has_touch"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhiteShade"
                    android:textSize="15sp"
                    android:text="Has TouchScreen Emulation? :"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"
                    android:textStyle="bold"
                    android:id="@+id/touchscreen_emulation"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhiteShade"
                    android:textSize="15sp"
                    android:text="Has Basic MultiTouch? :"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"
                    android:textStyle="bold"
                    android:id="@+id/has_basic_multitouch"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhiteShade"
                    android:textSize="15sp"
                    android:text="Has Extended MultiTouch? :"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"
                    android:textStyle="bold"
                    android:id="@+id/has_extended_multitouch"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhiteShade"
                    android:textSize="15sp"
                    android:text="Has Full Hand MultiTouch? :"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"
                    android:textStyle="bold"
                    android:id="@+id/has_full_hand_multitouch"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhiteShade"
                    android:textSize="15sp"
                    android:text="Screen Height :"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"
                    android:textStyle="bold"
                    android:id="@+id/screen_height"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhiteShade"
                    android:textSize="15sp"
                    android:text="Screen Width :"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"
                    android:textStyle="bold"
                    android:id="@+id/screen_width"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhiteShade"
                    android:textSize="15sp"
                    android:text="Screen Density :"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"
                    android:textStyle="bold"
                    android:id="@+id/screen_density"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhiteShade"
                    android:textSize="15sp"
                    android:text="Scaled Density :"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"
                    android:textStyle="bold"
                    android:id="@+id/scaled_density"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhiteShade"
                    android:textSize="15sp"
                    android:text="Density (dpi) :"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"
                    android:textStyle="bold"
                    android:id="@+id/density"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhiteShade"
                    android:textSize="15sp"
                    android:text="X dpi :"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"
                    android:textStyle="bold"
                    android:id="@+id/x_dpi"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhiteShade"
                    android:textSize="15sp"
                    android:text="Y dpi :"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"
                    android:textStyle="bold"
                    android:id="@+id/y_dpi"/>

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>
