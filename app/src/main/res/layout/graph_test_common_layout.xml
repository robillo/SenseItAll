<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorTextFive">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="10sp"
            app:cardElevation="10sp"
            app:cardCornerRadius="3sp">

            <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/graph_view"
                android:layout_margin="5sp"
                tools:ignore="RtlHardcoded" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="7sp"
                app:cardCornerRadius="3sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginTop="15sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/custom_holo_red"
                            android:textSize="18sp"
                            android:text="@string/x"
                            android:padding="10sp"
                            android:gravity="center"
                            android:id="@+id/x_val"/>

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/custom_holo_green"
                            android:textSize="18sp"
                            android:text="@string/y"
                            android:padding="10sp"
                            android:gravity="center"
                            android:id="@+id/y_val"/>

                        <TextView
                            android:layout_width="0sp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/custom_holo_blue"
                            android:textSize="18sp"
                            android:text="@string/z"
                            android:padding="10sp"
                            android:gravity="center"
                            android:id="@+id/z_val"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="@color/colorTextFive"
                        tools:ignore="ContentDescription,SmallSp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextTwo"
                        android:textSize="15sp"
                        android:text="@string/units"
                        android:padding="10sp"
                        android:gravity="center"
                        android:id="@+id/units"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>